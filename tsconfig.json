
{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "es2024",
        "baseUrl": "./",
        "verbatimModuleSyntax": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@router/*": ["router/*"],
            "@components/*": ["renderer/components/*"]
        },
    },
    "include": [
        "renderer/**/*",
        "router/**/*",
        "helpers/**/*",
        "types.d.ts"
    ],
    "exclude": ["**/*.svelte"]
}
